.graficas
  canvas
    background-color colorPrimario
    border-radius 10px
    margin-bottom 1em
    padding 1em
    font-size: .7em
    color colorBlanco !important

.btnPpal
	background colorAccent !important 
	font-family 'Montserrat', sans-serif
	font-weight bold		
	transition .5s
			
	&:hover
		background colorAccent
		color white
		font-size 17px

body
	font-family: 'Allerta', sans-serif;
	background-color colorBlanco

.headerppal
	background colorPrimario
	overflow hidden
	box-shadow 0 8px 10px rgba(0,0,0,0.5)
	padding-bottom 30px
	text-align center
	
	.titulo
		font-size 40px
		font-family 'Montserrat', sans-serif
		margin-top 30px
		margin-bottom 0
		
	.titulo-a		
		color colorBlanco
		font-size 20px
		padding-top 5px		
		padding-bottom 15px
	
	.header-logotipo
		margin-right 5em
		margin-left 50px
		margin-top 20px		
		
		img	
			height 40px
			transition .6s
			
			&:hover
				transform scale(1.2)
		
	.header-avatar
		display none
		float right
		margin-top -200px
		margin-right 50px
		
		img
			border-radius 60%
			height 80px
			width 80px
			transition .6s
			transform translateY(100px)

.modal-registro
	width 80% !important

.registro-bienvenida
	text-align center
	width 100%		
	
	h4
		color colorPrimario
		font-size 1.5em
		font-family 'Montserrat', sans-serif
		font-weight bold
		margin-bottom 0.5em
		
	.registro-bienvenida-texto		
		margin-bottom 1em
		font-size 1em
		text-align left

	span		
		color colorAccent
		font-size 1.2em
		font-weight bold
    

.more-info
  label
    color red

.registro-formulario
	border-left 0.3em solid colorPrimario

	div
		margin 0
		div
      margin-bottom 1.2em
      label
        display inline-block
        margin-left 1em

	label
		color colorPrimario
		font-size 1em			
			
	a
		margin-top 2em		
		text-align center
		width 80% !important

	.div-btnInicioSesion
		text-align center

		a
			background colorPrimario !important

	.lbl-ingresar-redes
		color colorPrimario		
		font-weight bold
		padding-top 1em
		text-align center		
		
	.registro-iconos-redes
	
		background colorBlanco !important

		text-align center
		
		.logo-facebook		
						
			&:before
								
				color colorPrimario					
				content: "\f101"
				font-size 40px
				font-family "Flaticon"

		.logo-google	

			margin-left 1em	
						
			&:before
								
				color colorPrimario					
				content: "\f2b3"
				font-size 45px
				font-family "googleicon"
							
		.logo-twitter
			
			margin-left 1em
						
			&:before				
				color colorPrimario					
				content: "\f102"
				font-size 40px
				font-family "Flaticon"			

.div-btnRegistrarse
	text-align center
	margin-top 2em
	margin-bottom 0em

	a
		background colorPrimario !important
	
.titulo-posts
	color colorPrimario
	font-weight bold
	text-align center

@media screen and (min-width: 768px)


	.headerppal
    padding-bottom 0
    display flex
    align-items center
		text-align left
		
		.header-logotipo
			float left
			
		.header-avatar
			display inline-block

	.registro-bienvenida
		text-align left
		
		h4
			margin-bottom 1em
			font-size 2em
		
		.registro-bienvenida-texto		
			margin-bottom 2em
			font-size 1.5em
		
		span		
			font-size 1.5em

		
	.modal-registro
		width 60% !important